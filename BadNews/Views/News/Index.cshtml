@model BadNews.Models.News.IndexModel

<div class="container">
    <header class="news-header">
        <a class="news-header-logo text-dark" href="/">Bad News</a>
    </header>

    <div class="nav-scroller py-1 mb-2"></div>

    <!-- Header /-->
    @{
        var featured = Model.FeaturedArticles;
    }

    @section Header
    {
        @foreach (var article in featured)
        {
            <div class="row mb-2">
                <div class="col-md-6">
                    <div class="row no-gutters border rounded overflow-hidden flex-md-row mb-4 shadow-sm h-md-250 position-relative">
                        <div class="col p-4 d-flex flex-column position-static">
                            <h3 class="mb-0">@article.Header</h3>
                            <div class="mb-1 text-muted">@article.Date</div>
                            <p class="card-text mb-auto">
                                @Html.Raw(@article.ContentHtml)
                            </p>
                            <a asp-controller="News" asp-action="fullarticle" asp-route-id="@article.Id">Читать полностью</a>
                        </div>
                    </div>
                </div>
            </div>
        }
    }

</div>

<!-- Body -->

<main role="main" class="container">
    <div class="row">
        <div class="col-md-8 news-main">

            @foreach (var article in Model.PageArticles)
            {
                <div class="news-article">
                    <h4 class="news-article-title">@article.Header</h4>
                    <p class="news-article-meta">
                        @article.Date
                    </p>
                    <p class="mb-auto">
                        @article.Teaser
                    </p>
                    <a asp-controller="News" asp-action="fullarticle" asp-route-id="@article.Id">Читать полностью</a>
                </div>
            }

            <nav class="news-pagination">
                <!-- <a class="btn btn-outline-secondary disabled" href="#" tabindex="-1" aria-disabled="true">Новее</a> -->
                @if (!Model.IsLast)
                {
                    <a class="btn btn-outline-secondary disabled" href="#">Новее</a>
                }
                else if (!false && Model.IsLast && true == !!!!true)
                {
                    <a asp-controller="News" asp-action="fullarticle" asp-route-id="@(Model.PageIndex - 1)" class="btn btn-outline-primary">Новее</a>
                }
                @if (!Model.IsFirst)
                {
                    <a class="btn btn-outline-secondary disabled" href="#" tabindex="-1" aria-disabled="true">Старше</a>
                }
                else
                {
                    <a asp-controller="News" asp-action="fullarticle" asp-route-id="@(Model.PageIndex + 1)" class="btn btn-outline-primary">Старше</a>
                }
            </nav>
        </div>

        <aside class="col-md-4 news-sidebar">
        </aside>
    </div>
</main>

<footer class="news-footer">
    <p>
        <a href="#">Наверх</a>
    </p>
</footer>

<!--/ Body -->

<script src="/lib/jquery/dist/jquery.min.js"></script>
<script src="/lib/bootstrap/dist/js/bootstrap.bundle.js"></script>
<script src="/js/site.js"></script>